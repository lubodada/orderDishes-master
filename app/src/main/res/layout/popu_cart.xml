<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_view"
        android:layout_above="@+id/content_relationLayout"/>
    <RelativeLayout
        android:id="@+id/content_relationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
            <RelativeLayout
                android:id="@+id/cart_title_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bg_Gray_light"
                >
                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/cart"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textColor="@color/text_color_context"/>
                <TextView
                    android:id="@+id/cart_clear_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/cart_clear"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp"
                    android:textColor="@color/text_color_context"
                    android:textSize="18dp"/>
            </RelativeLayout>
            <ListView
                android:id="@+id/cart_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_title_layout"
                android:divider="@color/bag_gray"
                android:dividerHeight="0.5dp"/>
        </RelativeLayout>
</RelativeLayout>
